  <body>

    <!-- Image section -->
    {{#sites}}
      <div class='image'>
        <h1>{{this.name}}</h1>
        <img src='/Images/site1.jpg' alt='' />
      </div>
      <form action='/addsiteimg' action='POST' enctype='multipart/form-data'>
        <input type='file' name='sampleFile' accept='image/*' />
        <button type='submit' action='/addsiteimg'>Submit</button>
      </form>
      <!-- Info section -->
      <div class='info'>
        <h2>Address:{{this.address}}</h2>
        <br />
        <h2>Date:{{this.date}}</h2>
        <br />
        <h2>Additional info:</h2>
        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptate,
